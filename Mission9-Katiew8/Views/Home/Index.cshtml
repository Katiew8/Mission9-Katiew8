@{    ViewData["Title"] = "BookStore";
}

@model ProjectViewModel

<h1>Book Store</h1>

@foreach (Books b in Model.Books)
{ 
    <h3>@b.Title</h3>
    <ul>
        <li>Author: @b.Author</li>
        <li>Publisher: @b.Publisher</li>
        <li>Isbn: @b.Isbn</li>
        <li>Classification: @b.Classification</li>
        <lis>Category: @b.Category</lis>
        <li>Page Count: @b.PageCount pages</li>
        <li>Price: $@b.Price</li>
    </ul>
    <br />
}

<div page-blah="@Model.PageInfo" page-action="Index"></div>



